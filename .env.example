# Server Configuration
PORT=3000
NODE_ENV=development
LOG_LEVEL=info

# API Keys
GEMINI_API_KEY=your_gemini_api_key_here
LUNCH_MONEY_API_KEY=your_lunch_money_api_key_here
LOCATIONIQ_API_KEY=your_locationiq_api_key_here

# Security (Optional)
# Generate with: openssl rand -hex 32
WEBHOOK_SECRET=

# Account Mapping (Optional - Overrides config/account-mapping.json)
# Format: ACCOUNT_<APP_NAME_UPPERCASE_WITH_UNDERSCORES>=<lunch_money_account_id>
ACCOUNT_MAYBANK_MAE=
ACCOUNT_GRAB=
ACCOUNT_TNG_EWALLET=
ACCOUNT_SHOPEEPAY=

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# Retry Configuration
API_RETRY_LIMIT=3
API_RETRY_BACKOFF_MS=10000

# OpenTelemetry / SigNoz Configuration
OTEL_EXPORTER_OTLP_ENDPOINT=http://otel.obliquetitan.com
OTEL_SERVICE_NAME=duitmyself-app
OTEL_TRACES_SAMPLER=always_on

# Wide Events Logging (based on https://loggingsucks.com/)
# Emit single canonical log line per request with full business context
# Set to false to disable (not recommended)
WIDE_EVENTS_ENABLED=true

# CC Statement Service
NOTION_API_KEY=your_notion_api_key_here
NOTION_CC_DATABASE_ID=2354fc10333980c1bcd1e9f796486d6c
NOTION_STATEMENTS_DATABASE_ID=2354fc1033398059b218d5c397f63698
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_CHAT_ID=your_telegram_chat_id_here
TIMEZONE=Asia/Kuala_Lumpur
